<h1>Tech Blog</h1>
<h2>Posts</h2>
{{#each posts}}
<div class="card">
    <div class="card-content">
        <div class="media">
            <div class="media-content">
                <p class="title is-4">{{title}}</p>
                <p class="subtitle is-6">{{createdAt}}</p>
            </div>
        </div>
        <div class="content">
            {{body}}
        </div>
    </div>
</div>
{{/each}}